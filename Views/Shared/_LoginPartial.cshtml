
@inject Microsoft.AspNetCore.Identity.SignInManager<AppoinmentScudeler.Models.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
   <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class="nav-item">
            <a class="nav-link " id="registerAppointment" asp-controller="Appoinment" asp-action="Index">Registor Appointment</a>
        </li>
            <li class="nav-link">@User.Identity.Name</li>
            <li><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log Off</a></li>
        </ul>
   </form>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a class="nav-link " id="registerLink" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li>
            <a class="nav-link " id="loginLink" asp-controller="Account" asp-action="Login">Sign In</a>
        </li>
    </ul>
}